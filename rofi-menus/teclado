#!/bin/sh

opciones="Cambiar idioma\nInvertir Esc/Mayus\nCancelar"
selec=$(echo -e $opciones | rofi -dmenu -i -p "Opciones del teclado")
case $selec in
	"Cambiar idioma")
		opciones="Espa単ol es\nEspa単ol la\nIngles\nCancelar"
		selec=$(echo -e $opciones | rofi -dmenu -i -p "Elige una opcion:")
		case $selec in
			"Espa単ol es")
				setxkbmap es ;;
			"Espa単ol la")
				setxkbmap latam ;;
			"Ingles")
				setxkbmap us ;;
			Cancelar)
				exit 0 ;;
		esac ;;

	"Invertir Esc/Mayus")
		opciones="Activar\nDesactivar\nCancelar"
		selec=$(echo -e $opciones | rofi -dmenu -i -p "Elige una opcion:")
		case $selec in
			Activar)
				setxkbmap -option caps:swapescape ;;
			Desactivar)
				setxkbmap -option ;;
			Cancelar)
				exit 0 ;;
		esac ;;
	Cancelar)
		exit 0 ;;
esac
